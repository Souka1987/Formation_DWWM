<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
  <id>com.android.tools.apk</id>
  <name>Android APK Support</name>
  <version>1.0</version>
  <vendor>Google</vendor>
  <depends>org.jetbrains.android</depends>
  <depends>com.android.tools.ndk</depends>

  <description>Provides Android APK support</description>
  <idea-version since-build="145.597"/>

  <extensions defaultExtensionNs="com.intellij">
    <writingAccessProvider implementation="com.android.tools.idea.apk.ApkWritingAccessProvider"/>
  </extensions>

  <project-components>
    <component>
      <implementation-class>com.android.tools.idea.apk.ApkProjectComponent</implementation-class>
      <skipForDefaultProject/>
    </component>
  </project-components>

  <extensions defaultExtensionNs="com.android">
    <customProjectTypeImporter implementation="com.android.tools.idea.apk.ApkProjectImporter"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="com.android.tools.idea.apk.symbols.DebugSymbolNotifications"/>
    <projectService serviceImplementation="com.android.tools.idea.apk.LibraryUpdates"/>
    <projectService serviceImplementation="com.android.tools.idea.apk.external.system.ApkSystemSettings"/>
    <projectService serviceImplementation="com.android.tools.idea.apk.external.system.ApkSystemLocalSettings"/>
    <projectService serviceImplementation="com.android.tools.idea.apk.issues.SetupIssueReporter"/>
    <projectService serviceImplementation="com.android.tools.idea.apk.FileWatcherService"/>
    <externalSystemManager implementation="com.android.tools.idea.apk.external.system.ApkSystemManager"/>

    <toolWindow id="APK Project" anchor="right" icon="GradleIcons.ToolWindowGradle"
                factoryClass="com.android.tools.idea.apk.ui.ApkImportToolWindowFactory"
                conditionClass="com.android.tools.idea.apk.ui.ApkImportToolWindowFactoryCondition"/>
    <editorNotificationProvider implementation="com.android.tools.idea.apk.editor.notification.MissingDebugSymbolsNotificationProvider"/>
    <editorNotificationProvider implementation="com.android.tools.idea.apk.editor.notification.ApkReloadNotificationProvider"/>
    <fileEditorProvider implementation="com.android.tools.idea.apk.editor.LibraryEditorProvider"/>
  </extensions>
</idea-plugin>
